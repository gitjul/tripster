<div class="row">
  <div class="span12">
    <div class="user-header">
      <h1 class="nextto"><%= link_to "#{@user['login']}", user_path(@user.id) %>
      <small>
        <% if current_user && current_user==@user %>
        Twój profil
        <% else %>
        Profil
        <% end %>
      </small>
      </h1>
      <% if current_user && current_user==@user %>
      <span class="pull-right">
        <%= link_to('Dodaj podróż', new_trip_path, :class => "btn btn-success btn-large") %>
      </span>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span3 about">
    <%= image_tag(@user.avatar_url(:thumb).to_s, :title => "Awatar użytkownika #{@user['login']}") %>
    <% if current_user && current_user==@user %>
      <div><%= link_to('Zmień obrazek profilowy', edit_avatar_user_path(@user), :class => "btn btn-small") %></div>
    <% end %>
    <div class="userinfo">
      <% unless @user.fullname.nil? || @user.fullname.empty? %>
        <div><strong><%= @user.fullname %></strong></div>
      <% end %>
      <% unless @user.email.nil? || @user.email.empty? %>
        <div><%= @user.email %></div>
      <% end %>
      <% unless @user.location.nil? || @user.location.empty? %>
        <div><%= @user.location %></div>
      <% end %>
      <% unless @user.bio.nil? || @user.bio.empty? %>
        <div>O mnie:<i><%= simple_format(@user.bio) %></i></div>
      <% end %>
    </div>
    <br />
    <% if current_user && current_user==@user %>
    <div><%= link_to 'Edytuj', edit_user_path(@user) %></div>
    <% end %>
    <% if current_user && current_user.admin? && current_user!=@user %>
      <%= link_to 'Usuń użytkownika', @user, :confirm => "Na pewno chcesz usunąć użytkownika?", :method => :delete %>
    <% end %>
    <div><%= link_to 'Wróć do listy użytkowników', users_path %></div>
  </div>
  <div class="span9">
  <% if flash[:error] %>
  <div class="alert alert-error">
    <%= flash[:error] %>
    <a class="close" href="<%= user_path(@user) %>">×</a>
  </div>
  <% end %>
  <% if flash[:info] %>
  <div class="alert alert-info">
    <%= flash[:info] %>
    <a class="close" href="<%= user_path(@user) %>">×</a>
  </div>
  <% end %>
  <% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
    <a class="close" href="<%= user_path(@user) %>">×</a>
  </div>
  <% end %>
    <p>Tu będą podróże użytkownika, zdjęcia etc.</p>
  </div>
</div>

