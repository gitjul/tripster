<div class="row">
<div class="span4 offset4">
  <%= form_for @user do |f| %>
    <h2>Dołącz do nas!</h2>
    <!-- komunikaty błędów -->
    <% if @user.errors.any? %>
    <ul class=errors>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %> </li>
    <% end %>
    </ul>
    <% end %>
    <div class="field">
    <%= f.label :login, "Login:" %>
    <%= f.text_field :login, {:class => "input-xlarge"} %>
    <p class="help-block">Pole wymagane.</p>
    </div>
    <div class="field">
    <%= f.label :password, "Hasło:" %>
    <%= f.password_field :password, {:class => "input-xlarge"} %>
    <p class="help-block">Pole wymagane.</p>
    </div>
    <div class="field">
    <%= f.label :password_confirmation, "Potwierdź hasło:" %>
    <%= f.password_field :password_confirmation, {:class => "input-xlarge"} %>
    <p class="help-block">Pole wymagane.</p>
    </div>
    <div class="field">
    <%= f.label :fullname, "Pełne imię:" %>
    <%= f.text_field :fullname, {:class => "input-xlarge"} %>
    <p class="help-block">Pole opcjonalne. Możesz uzupełnić je później.</p>
    </div>
    <div class="field">
    <%= f.label :email, "E-mail:" %>
    <%= f.text_field :email, {:class => "input-xlarge"} %>
    <p class="help-block">Pole opcjonalne. Możesz uzupełnić je później.</p>
    </div>

    <div class="form-actions">
    <%= f.submit("Stwórz konto!", :class => "btn btn-large btn-primary") %>
    </div>


  <% end %>
</div>
</div>

