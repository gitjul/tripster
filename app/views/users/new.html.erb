<h1>Utwórz nowe konto</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %> </li>
  <% end %>
  </ul>
  <% end %>

  <!-- kod wyświetlający błędy -->
  <p>
    <%= f.label :Login %> <br />
    <%= f.text_field :login %>
  </p>
  <!-- <p>
    <%= f.label :email %> <br />
    <%= f.text_field :email %>
  </p> -->
  <p>
    <%= f.label :Hasło %> <br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :Potwierdź_hasło %> <br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Wyślij" %> </p>
<% end %>
