<h1>Edytuj profil</h1>
<%= form_for @user do |f| %>
  <!-- kod wyświetlający błędy -->
  <p>
  <%= f.label :pełne_imię %>
  <%= f.text_field :fullname %>
  </p>
  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :o_mnie %>
  <%= f.text_field :bio %>
  </p>
  <p>
  <%= f.label :gdzie_obecnie_przebywasz? %>
  <%= f.text_field :location %>
  </p>
  <br />
  <p>
  <%= f.label :stare_hasło %>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label :nowe_hasło %>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label :potwierdź_nowe_hasło %>
  <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Zapisz" %> </p>
<% end %>
