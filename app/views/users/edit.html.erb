<div class="row">
<div class="span6 offset4">
  <h2>Edycja profilu</h2>
  <%= form_for @user do |f| %>
  <!-- komunikaty błędów -->
  <% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %> </li>
  <% end %>
  </ul>
  <% end %>
  <div class="field">
    <%= f.label :fullname, "Pełne imię:" %>
    <%= f.text_field(:fullname, :class => "input-xlarge", :size => "30") %>
  </div>
  <div class="field">
    <%= f.label :email, "E-mail:" %>
    <%= f.text_field(:email, :class => "input-xlarge", :size => "30") %>
  </div>
  <div class="field">
  <%= f.label :bio, "O mnie:" %>
  <%= f.text_area(:bio, :rows => "3") %>
  </div>
  <div class="field">
  <%= f.label :location, "Miejsce pobytu:" %>
  <%= f.text_field(:location, :class => "input-xlarge", :size => "30") %>
  </div>
  <h3>Zmiana hasła</h3>
  <p><span class="label label-info">nie wpisuj nic w tej sekcji, jeśli nie chcesz zmieniać hasła.</span></p></center>
  <div class="field">
  <%= f.label :password, "Nowe hasło:" %>
  <%= f.password_field(:password, :class => "input-xlarge", :size => "30") %>
  </div>
  <div class="field">
  <%= f.label :password_confirmation, "Potwierdź nowe hasło:" %>
  <%= f.password_field(:password_confirmation, :class => "input-xlarge", :size => "30") %>
  </div>
  <div class="actions"><%= f.submit('Zapisz zmiany', :class => "btn btn-large btn-primary" ) %>
  <%= link_to('Powrót', @user, :class => "btn btn-large next" ) %></div>
  
  <% end %>
</fieldset>
</div>
</div>
