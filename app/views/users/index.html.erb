<ul class="nav nav-pills big">
  <li class><%= link_to 'Podróże', trips_path %></li>
  <li class="active"><%= link_to 'Tripsterzy', users_path %></li>
  <span class="pull-right">  
    <%= link_to('Dodaj podróż', new_trip_path, :class => "btn btn-success btn-large") %>
  </span>
</ul>

<p id="notice"><%= notice %> </p>

<% @users.each do |user| %>
<li><b><%= link_to "#{user['login']}", user_path(user.id) %></b> 
<% if current_user && current_user.admin? && current_user!=user %>
    <%= link_to "Usuń", user, :confirm => "Na pewno chcesz usunąć użytkownika?", :method => :delete %>
<% end %>
</li>
<% end %>
